@model McsdExperiments.Models.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}
@section Styles {
    @Styles.Render("~/Content/Custom/Home.css")
}
<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div id="localStorage">
        <h1>Loacal Storage</h1>
        <form>
            <div class="row">
                <label id="Label3"></label>
            </div>
            <div class="form-horizontal">
                <div class="row">
                    <input type="hidden" id="HiddenField1" />
                    <input type="text" id="TextBox1" class="form-control" placeholder="Full Name" />
                    <input type="text" id="TextBox2" class="form-control" placeholder="Email" />
                </div>
                <div class="row">
                    <input type="submit" id="Button1" value="Save to locals storage" class="btn btn-success" />
                    <input type="submit" id="Button2" value="Save to server via postback" class="btn btn-success" />
                    <input type="submit" id="Button3" value="Save to server via ajax" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
    <div class="row">
        <h1>Slider (@Model.SliderPosition)</h1>
        @using (Html.BeginForm("ProcessSlider", "Home"))
        {
            @Html.TextBoxFor(m => m.SliderPosition, new { @type = "range" });
            <input type="submit" class="btn btn-primary" value="Process on Server" />
        }
    </div>
    <div class="row">
        <h1>Media</h1>
        <div class="media">
            <div class="media-left">
                <div class="media-heading">What is this?</div>
                <a href="#" data-toggle="tooltip" title="Resize browser window to see answer.">
                    <img class="media-object img-responsive img-thumbnail" src="~/Content/Images/FrozenSpider.jpg" alt="alt text" />
                </a>
                <div class="custom-image-quiz">This is a frozen spider</div>
            </div>
        </div>
    </div>
</div>
}
@section scripts{
    @Scripts.Render("~/Scripts/Custom/localStorage.js")
    @Scripts.Render("~/Scripts/Custom/home.js")
}


